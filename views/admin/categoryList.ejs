<%- include("../partials/adminHeader") %>

<div class="container mt-5">
  <h2 class="mb-4 text-center">Manage Categories</h2>

  <!-- Add New Category Form -->
  <form method="POST" action="/admin/categories" class="mb-4">
    <div class="row g-2">
      <div class="col-md-10">
        <input type="text" name="name" placeholder="New category name" class="form-control" required />
      </div>
      <div class="col-md-2">
        <button class="btn btn-success w-100">Add</button>
      </div>
    </div>
  </form>

  <!-- Category Table -->
  <table class="table table-bordered text-center">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      <% if (categories.length > 0) { %>
        <% categories.forEach((category, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
            <td><%= category.createdAt.toDateString() %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="3">No categories found</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../partials/adminFooter") %>
