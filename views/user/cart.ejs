<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart - SneakerSpace</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include("../partials/userHeader") %>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Your Cart</h2>
    <% if (message) { %>
      <div class="alert <%= message.includes('Error') ? 'alert-danger' : 'alert-success' %>" role="alert">
        <%= message %>
      </div>
    <% } %>

    <% if (cart && cart.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach(item => { %>
            <tr>
              <td><%= item.productId.name %></td>
              <td>₹<%= item.productId.price.toFixed(2) %></td>
              <td>
                <form action="/cart/update/<%= item.productId._id %>" method="POST" class="d-inline">
                  <input
                    type="number"
                    name="quantity"
                    value="<%= item.quantity %>"
                    min="1"
                    class="form-control d-inline-block w-auto"
                    style="width: 80px;"
                    aria-label="Quantity for <%= item.productId.name %>"
                    onchange="this.form.submit()"
                  >
                </form>
              </td>
              <td>₹<%= (item.productId.price * item.quantity).toFixed(2) %></td>
              <td>
                <form action="/cart/remove/<%= item.productId._id %>" method="POST" style="display:inline;">
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm"
                    aria-label="Remove <%= item.productId.name %> from cart"
                  >
                    Remove
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <h4 class="text-end">Total: ₹<%= cart.reduce((sum, item) => sum + item.productId.price * item.quantity, 0).toFixed(2) %></h4>
      <div class="text-end">
        <a href="/checkout" class="btn btn-primary mt-3">Proceed to Checkout</a>
      </div>
    <% } else { %>
      <p class="text-center">Your cart is empty</p>
      <div class="text-center">
        <a href="/dashboard" class="btn btn-primary mt-3">Continue Shopping</a>
      </div>
    <% } %>
  </div>

  <%- include("../partials/userFooter") %>
</body>
</html>