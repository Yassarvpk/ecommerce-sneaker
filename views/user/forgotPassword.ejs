<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - SneakerSpace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include("../partials/userHeader") %>
    <div class="container mt-5">
      <h2 class="text-center mb-4">Forgot Password</h2>
      <% if (message) { %>
        <div class="alert <%= message.includes('Error') ? 'alert-danger' : 'alert-success' %>" role="alert">
          <%= message %>
        </div>
      <% } %>
      <form action="/forgot-password" method="POST" class="w-50 mx-auto">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            placeholder="Enter your email"
            required
            aria-label="Email for password reset"
          >
        </div>
        <button type="submit" class="btn btn-primary" aria-label="Send reset link">Send Reset Link</button>
        <a href="/login" class="btn btn-link">Back to Login</a>
      </form>
    </div>
    <%- include("../partials/userFooter") %>
  </body>
  </html>