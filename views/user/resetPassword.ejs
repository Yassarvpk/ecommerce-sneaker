<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - SneakerSpace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include("../partials/userHeader") %>
    <div class="container mt-5">
      <h2 class="text-center mb-4">Reset Password</h2>
      <% if (message) { %>
        <div class="alert <%= message.includes('Error') ? 'alert-danger' : 'alert-success' %>" role="alert">
          <%= message %>
        </div>
      <% } %>
      <form action="/reset-password/<%= token %>" method="POST" class="w-50 mx-auto">
        <div class="mb-3">
          <label for="password" class="form-label">New Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            placeholder="Enter new password"
            required
            aria-label="New password"
          >
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            class="form-control"
            placeholder="Confirm new password"
            required
            aria-label="Confirm new password"
          >
        </div>
        <button type="submit" class="btn btn-primary" aria-label="Reset password">Reset Password</button>
        <a href="/login" class="btn btn-link">Back to Login</a>
      </form>
    </div>
    <%- include("../partials/userFooter") %>
  </body>
  </html>