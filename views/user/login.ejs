<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SneakerSpace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('../partials/userHeader') %>
    <div class="container mt-5">
      <h2 class="text-center mb-4">Login</h2>
      <% if (message) { %>
        <div class="alert <%= message.includes('Error') || message.includes('not found') || message.includes('Incorrect') ? 'alert-danger' : 'alert-success' %>" role="alert">
          <%= message %>
        </div>
      <% } %>
      <form action="/login" method="POST" class="w-50 mx-auto">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
      </form>
      <div class="text-center mt-3">
        <a href="/forgot-password">Forgot Password?</a> | <a href="/signup">Sign Up</a>
      </div>
    </div>
    <%- include('../partials/userFooter') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  </html>